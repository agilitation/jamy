      <div class="icon">
        <svg version="1.1" viewBox="0 0 204 204" class="circle">
          <path
              stroke="#000000" stroke-width="2" stroke-miterlimit="10" fill="rgba(0,0,0,0)"
              d="M 102, 102
            m -100, 0
            a 100,100 0 1,0 200,0
            a 100,100 0 1,0 -200,0">
          </path>
        </svg>
        <img src="../assets/icons8-search.png">
      </div>
      <div class="detail">
        <h3>Fan</h3>
        <div class="legend">
          Like us on Facebook!
        </div>
        <div class="points">+ 30</div>
      </div>
      <div class="action">
        <button class="btn small">
          Like
        </button>
      </div>
    </div>
    <div class="badge">
      <div class="icon">
        <svg version="1.1" viewBox="0 0 204 204" class="circle">
          <path
              stroke="#000000" stroke-width="2" stroke-miterlimit="10" fill="rgba(0,0,0,0)"
              d="M 102, 102
            m -100, 0
