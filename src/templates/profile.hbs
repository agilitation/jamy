        <svg version="1.1" viewBox="0 0 204 204" class="circle">
          <path
              stroke="#000000" stroke-width="2" stroke-miterlimit="10" fill="rgba(0,0,0,0)"
              d="M 102, 102
            m -100, 0
            a 100,100 0 1,0 200,0
            a 100,100 0 1,0 -200,0">
          </path>
        </svg>
        <img src="../assets/icons8-search.png">
      </div>
      <div class="detail">
        <h3>Curieux</h3>
        <div class="progress mini">
          <div class="bar" style="width:40%"></div>
        </div>
        <div class="legend">
          15/20 fiches produits consultées
        </div>
      </div>
      <div class="action">
        <a href="#/friends">
          <svg viewBox="0 0 16 36">
            <polyline points="5.32 4.844 10.5 17.979 5.441 31.115"></polyline>
          </svg>
        </a>
      </div>
    </div>
    <h2>One-shot</h2>
