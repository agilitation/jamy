<header>
  <div class="points">
    <span class="value">1 257</span>
    <button class="info">i</button>
    <span class="unit">points</span>
  </div>
  <div style="position: relative; ">
    <div class="progress">
      <div class="bar" style="width: 55%;"></div>
    </div>
    <div class="scale">
      <span style="left: 0;">500</span>
      <span style="left: 50%">1000</span>
      <span style="left: 100%">1500</span>
    </div>
  </div>
  <button class="btn">Échanger</button>
